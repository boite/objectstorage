{
    "name": "linkorb/objectstorage",
    "description": "ObjectStorage library for your cloud-based applications",
    "homepage": "http://www.github.com/linkorb/objectstorage",
    "keywords": ["objectstorage", "osd", "objectstore", "s3", "gridfs", "mongodb", "storage", "cloud storage"],
    "type": "library",
    "authors": [
        {
            "name": "Joost Faassen",
            "email": "j.faassen@linkorb.com",
    	    "role": "Development"
        }
    ],
    "require": {
        "php": "^7.2",
        "paragonie/halite": "^4"
    },
    "require-dev": {
        "symfony/console": "^4",
        "aws/aws-sdk-php": "^3",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpstan/phpstan": "^0.11.8",
        "phpunit/phpunit": "^8.1"
    },
    "suggest": {
        "linkorb/bergen-client-php": "To use the Bergen Adapter."
    },
    "autoload": {
        "psr-4": {
            "ObjectStorage\\": "src/"
        } 
    },
    "autoload-dev": {
        "psr-4": {
            "ObjectStorage\\Test\\": "tests/"
        }
    },
    "license": "MIT"
}
